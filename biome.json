{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "recommended": true,
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "src/**",
      "test/**",
      "!**/dist",
      "!**/node_modules",
      "!**/coverage"
    ]
  },
  "formatter": {
    "formatWithErrors": false,
    "indentStyle": "space"
  },
  "html": { "formatter": { "selfCloseVoidElements": "always" } },
  "linter": {
    "rules": {
      "complexity": {
        "noForEach": "off",
        "useLiteralKeys": "off"
      },
      "recommended": true,
      "style": {
        "noUnusedTemplateLiteral": "error",
        "useTemplate": "error"
      }
    }
  }
}
